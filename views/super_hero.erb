  <form action="/teams" method="POST">
    <h1>Create a Team and Heroes!</h1>
    <label>Team Name</label>
    <input type="text" name="team[name]"><br>
    <label>Team Motto</label>
    <input type="text" name="team[motto]"><br>
        <% 3.times do |i| %>
          <h1><%= "Hero #{i}" %></h1><br>
          <label>Hero's Name</label>
          <input type="text" name=<%="team[members][#{i}][name]"%>><br>
          <label>Hero's Power</label>
          <input type="text" name=<%="team[members][#{i}][power]"%>><br>
          <label>Hero's Biography</label>
          <input type="text" name=<%="team[members][#{i}][biography]"%>><br>
        <% end %>
    <input type="submit">
  </form>
